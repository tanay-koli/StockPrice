<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Finance App"
        android:textSize="24sp"
        android:textColor="@color/textColor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/buttonStockPrice"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stock Price"
        android:layout_marginTop="40dp"
        android:layout_below="@id/title"/>

    <ImageButton
        android:id="@+id/buttonLearn"
        android:layout_width="400sp"
        android:layout_height="75sp"
        android:src="@drawable/img"
        android:contentDescription="Learn"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_below="@id/buttonStockPrice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/buttonOther1"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Option"
        android:layout_below="@id/buttonLearn"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/buttonOther2"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other Button 2"
        android:layout_below="@id/buttonOther1"
        android:layout_marginTop="20dp"/>
</RelativeLayout>
